<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".com.foodfreak.main.user.SplashScreen_foodfreak">

    <ImageView
        android:id="@+id/splash_foodfreak_logo"
        android:layout_width="350dp"
        android:layout_height="345dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_food_freak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/splash_amity_logo"
        android:layout_width="155dp"
        android:layout_height="155dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_amity_university_vector_logo" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading_anim_splashscreen_lottie"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="31dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/splash_foodfreak_logo"
        app:layout_constraintStart_toStartOf="@+id/splash_foodfreak_logo"
        app:layout_constraintTop_toBottomOf="@+id/splash_foodfreak_logo"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading_splashscreen" />

</androidx.constraintlayout.widget.ConstraintLayout>